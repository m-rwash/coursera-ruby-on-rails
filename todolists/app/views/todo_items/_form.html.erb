<%= bootstrap_form_for([@todo_list, @todo_item]) do |f| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this @todo_list.todo_item from being saved:</h2>

      <ul>
      <% @todo_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="well">
        <div class="row">
          <%= f.text_field :title, label: :title%>
        </div>

        <div class="row">
          <%= f.date_field :due_date, label: :due_date%>
        </div>

        <div class="row">
          <%= f.text_field :description, label: :description%>
        </div>

        <div class="row">
          <% if @todo_item.persisted? %>
            <%= f.check_box :completed, label: :completed%>
          <%end%>
        </div>

        <div class="row">
          <%= f.primary %>
          <%= link_to 'Back', @todo_list, class: "btn btn-danger" %> 
          <% if @todo_item.persisted? %>
            <%= link_to 'Show', [@todo_list, @todo_item] %>
          <%end%>

        </div>
      </div>
    </div>
  </div>
<% end %>
