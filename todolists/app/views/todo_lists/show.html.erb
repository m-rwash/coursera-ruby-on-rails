<% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="well well-sm">
      <strong>List name:</strong>
      <%= @todo_list.list_name %>
    </div>
  </div>
  <div class="row">
    <div class="well well-sm">
      <strong>List due date:</strong>
      <%= @todo_list.list_due_date %>
    </div>
  </div>
  <div class="row">
    <div class="well">
      <table class="table table-bordered table-responsive">
        <thead>
          <tr>
            <th>Title</th>
            <th>Due date</th>
            <th>Description</th>
            <th>Completed</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @todo_list.todo_items.each do |todo_item| %>
            <tr>
              <td><%= todo_item.title %></td>
              <td><%= todo_item.due_date %></td>
              <td><%= todo_item.description %></td>
              <td><%= todo_item.completed %></td>
              <td><%= link_to 'Show', [@todo_list, todo_item] %></td>
              <td><%= link_to 'Destroy', [@todo_list, todo_item], method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <%= link_to 'New Todo Item', new_todo_list_todo_item_path(@todo_list), class: "btn btn-primary"%> 
    <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: "btn btn-default" %> 
    <%= link_to 'Back', todo_lists_path, class: "btn btn-danger" %>
  </div>
</div>